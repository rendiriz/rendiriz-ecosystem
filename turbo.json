{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "$NEXT_PUBLIC_STAGE"],
      "outputs": ["dist/**", ".next/**"]
    },
    "personal#build": {
      "dependsOn": [
        "^build",
        "$NOTION_BLOG_TOKEN",
        "$NEXT_PUBLIC_NOTION_BLOG_DATABASE_ID",
        "$NOTION_NOTES_TOKEN",
        "$NEXT_PUBLIC_NOTION_NOTES_DATABASE_ID",
        "$DATABASE_URL",
        "$NEXT_PUBLIC_GA_ID"
      ],
      "outputs": [".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  },
  "globalDependencies": [".env"]
}
